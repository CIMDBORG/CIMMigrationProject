<Window x:Class="WpfApp1.Items_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Left="5" Top="5"
        Title="Issues" Height="650" Width="1200" Background="WhiteSmoke" ResizeMode="CanResize">

    <Viewbox StretchDirection="DownOnly" Stretch="UniformToFill">
        <Grid>
       
            <Frame x:Name="ItemsFrame" NavigationUIVisibility="Hidden"
               Grid.Row="1" Grid.Column="1" Width="1100" Height="600"/>
            <Button HorizontalAlignment="Right" Height="104" VerticalAlignment="Top" Background="Transparent" BorderThickness="0.1"
                   Style="{StaticResource btnGray}" Click="Button_Click">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                    <Image  HorizontalAlignment="Right" Height="80" Margin="0,-50,-50,0" VerticalAlignment="Top" Width="80" 
                   Source="Images/UPS_Dimensional_Shield_Color_Large_RGB.png"/>
                </StackPanel>
            </Button>
        </Grid>
    </Viewbox>
</Window>