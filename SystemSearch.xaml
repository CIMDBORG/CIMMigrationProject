<Window x:Class="WpfApp2.SystemSearch"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="SystemSearch" Height="350" Width="400">
    <Grid Background="LightGoldenrodYellow">
        <StackPanel Margin="0,125,0,0">
            <TextBlock Text="Enter The System You Would Like Below:" 
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBox Name ="SysFilter" Width="60" Height="20" Margin="0,20,0,0" 
                     Background="White"
                BorderThickness="2" FontSize="14"/>
        </StackPanel>
        <Button Name ="Submit" Height="30" Width="60" FontSize="14" Content="Submit"
                Style="{StaticResource btnGray}" 
                HorizontalAlignment="Center"
                VerticalAlignment="Center" Margin="0,100,0,0" Click="Submit_Click"/>
    </Grid>
</Window>
