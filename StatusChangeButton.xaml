<Window x:Class="WpfApp1.StatusChangeButton"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="300" Height="130" Width="255" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
      Title="Change Status">

    <Grid>
        <StackPanel  Margin="5,20,5,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">

                <TextBlock  Text="Update to BC Submited or BC Approved?" FontSize="12" FontWeight="Bold"
                                HorizontalAlignment="Left" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,20,0,60">
                <Button x:Name="BCSubmitted" Width="110" Content="BCSubmitted" Height="25" HorizontalAlignment="Center" VerticalAlignment="Center" Click="BCSubmitted_Click" />
                <Button x:Name="BCApproved" Width="110" Content="BCApproved" Height="25" HorizontalAlignment="Center" VerticalAlignment="Center" Click="BCApproved_Click" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>