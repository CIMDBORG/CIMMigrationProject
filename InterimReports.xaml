<Window x:Class="Interim.InterimReports"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Interim"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Reports">

    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
            <Button x:Name="SourceDetailReport" Content="Source Detail Report" Cursor="Hand" 
                    Style="{StaticResource btnBrown}" Width="175" Height="50" Click="SourceDetailReport_Click"/>
            <Button x:Name="SaturdayScenariosReport" Content="Saturday Scenarios" Cursor="Hand"
                    Margin="10,10" Click="SaturdayScenariosReport_Click"
                    Style="{StaticResource btnBrown}" Width="175" Height="50"/>
        </StackPanel>
    </Grid>
</Window>
